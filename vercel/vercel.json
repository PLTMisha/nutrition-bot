{
  "functions": {
    "api/analyze-photo.py": {
      "runtime": "python3.9",
      "maxDuration": 30,
      "memory": 1024
    },
    "api/process-barcode.py": {
      "runtime": "python3.9",
      "maxDuration": 15,
      "memory": 512
    },
    "api/health.py": {
      "runtime": "python3.9",
      "maxDuration": 5,
      "memory": 128
    }
  },
  "env": {
    "OPENAI_API_KEY": "@openai_api_key",
    "OPENFOODFACTS_API_URL": "https://world.openfoodfacts.org/api"
  },
  "build": {
    "env": {
      "PYTHONPATH": "/var/task"
    }
  }
}
